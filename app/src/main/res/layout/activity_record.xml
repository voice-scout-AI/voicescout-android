<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical" android:padding="16dp" tools:context=".record.RecordActivity">

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1.5" android:gravity="center|bottom"
        android:text="다음과 같이 말해보세요."
        android:textSize="25sp"
        android:includeFontPadding="false" />

    <TextView
        android:id="@+id/pageIndicatorTextView"
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:gravity="center" android:textColor="@color/midBlue"
        android:textSize="25sp"
        style="@style/TextStyle.ExtraBold"
        tools:text="1 / 10"
        android:includeFontPadding="false" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="5.0" />

</LinearLayout>