<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".record.RecordPageFragment">

    <TextView
        android:id="@+id/sentenceTextView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_background"
        android:lineSpacingExtra="20dp"
        android:padding="15dp"
        tools:text="안녕하세요. 반갑습니다." />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/recordButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/record_start"
            android:backgroundTint="@color/subBlue"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="20sp"
            style="@style/TextStyle.Bold"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/recordingStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/subBlack"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="녹음 중..."
            tools:visibility="visible"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>
